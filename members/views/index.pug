doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/stylesheets/style.css')
    title Document
  body 
  block content
  header 
    h1 Members Only 
    p 
      a(href=`${user.url}`) View Profile 
    
  main 
    p 
      a(href="/general/genres") View all genres 

    if user.grade == "Admin" || user.grade == "Owner"
      p 
        a(href="/general/users") View all users  

    if posts.length   
      ul.posts 
        for post in posts 
          li.post    
            p.post-title #{post.title}
            p.post-info User: #{post.user.username} - #{post.postDate_formatted} 
            p.post-genre Genre: #{post.genre.title}
            p.post-description 
              a(href=`${post.url}`) Post 

    else 
      p 0 posts available 
      p 
        a(href=`${user.url}/create`) Create Post +  
  hr
  ul.user-statistic 
    li Users: #{usersCount} 
    li Members: #{membersCount}
    li Admins: #{adminsCount}
