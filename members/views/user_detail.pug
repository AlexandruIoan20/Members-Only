doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/stylesheets/style.css')
        title Document
    body 
    block content 
        header 
            h1 #{user.username}

            if personalAccount 
                p.personal 
                    a(href=`${user.url}/delete`) Delete Account 
                p.personal 
                    a(href=`${user.url}/update`) Update Account 
                form(action="/general/logout", method = "POST") 
                    input(type="hidden" name = "user" value = user || undefined) 
                    button#submit-button(type = "submit") Log Out

        main 
            p Details: 
            ul 
                li
                    p.info Email: 
                    p.user-value #{user.email}
                li 
                    p.info Birthday: 
                    p.user-value #{user.birthDay_formatted}

        hr
        p.info Posts 
            if posts.length > 0 
                ul.posts    
                    for post in posts 
                        li
                            a(href=`${post.url}`) #{post.title}
                        
            else 
                p  No posts yet.