doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/stylesheets/style.css')
        title Document
    body 
        block content 
            header
                article.main-header
                    h1 #{pageTitle}
                nav  
                    ul 
                        li 
                            a(href="/general") âŒ‚
                        li 
                            a(href="/general/info") i

            main 
                section.info 
                    p.post-info  #{request.user.username} - #{request.user.grade}
                    p.post-info  #{request.status}
                    p.post-info  #{numberOfPosts} posts
                p.post-description #{request.description}


                if request.user.username == reqUser.username || reqUser.grade == "Admin" || reqUser.grade == "Owner"
                    hr
                    section.developer 
                        p
                            a.button(href=`${request.url}/delete`) Delete 

                            if request.user.username == reqUser.username
                                p 
                                    a.button(href=`${request.url}/update`) Edit  