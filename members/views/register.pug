doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/stylesheets/style.css')
        title Document
    body 
    block content 
    header.auth-header 
        h1 Members-Only 
    
    main.auth-main
        h2 Register
        form.auth-form(action="/general/register", method = "POST") 
            .form-group
                label(for="username") Username: 
                input#username(type="text" name = "username", value = username || "", required) 

            .form-group 
                label(for="email") Email: 
                input#email(type = "email", name = "email", value = email || "", required)

            .form-group 
                label(for="password") Password: 
                input#password(type = "password", name = "password", value = password || "", required)

            .form-group 
                label(for="birthDay") Birthday: 
                input#birthDay(type = "date", name = "birthDay", value = birthDay || "" required)

            hr
            article.buttons-holder 
                button.submit-button(type = "submit") Register  
        p.p-auth-a
            a.post-in-profile(href="/general/login") Login

        if errors 
            for error in errors 
                p= error.msg