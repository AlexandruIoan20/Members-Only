doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/stylesheets/style.css')
        title Document
    body 
    block content 
        header  
            h1 Promote user #{user.username} 

        main 
            p.info Actual grade: #{user.grade} 
            form(action="" method = "POST")
                .form-group 
                    select#grade(name="grade")
                        for grade in GRADES 
                            option(value=grade) #{grade} 
                article.button-holder 
                    button.submit-button(type = "submit") Promote